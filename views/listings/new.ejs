<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create New Listings</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the Title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Enter the Description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload the Image</label>
        <input
          name="listing[image]"
          placeholder="enter image url"
          type="file"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please Upload the Image!</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            placeholder="enter price"
            type="number"
            class="form-control"
            required
            min="1"
          />
          <div class="invalid-feedback">Enter the Price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            placeholder="enter country"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the Country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter the Location</div>
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="listing[category]" class="form-control" required>
          <option value="" disabled selected>Select a category</option>
          <option value="Mansion">Mansion</option>
          <option value="Farm">Farm</option>
          <option value="Lake">Lake</option>
          <option value="Beach">Beach</option>
          <option value="Apartment">Apartment</option>
          <option value="Ski Resort">Ski Resort</option>
          <option value="Camping">Camping</option>
          <option value="Cottage">Cottage</option>
          <option value="Luxury">Luxury</option>
        </select>
        <div class="invalid-feedback">Please select a category</div>
      </div>

      <button class="btn btn-dark mb-3">Add</button>
      <br />
    </form>
  </div>
</div>
