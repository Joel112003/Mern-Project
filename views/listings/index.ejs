<% layout("/layouts/boilerplate") %>

<div class="row mt-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
  <% for(listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-links">
    <div class="card .listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b> <br />
          â‚¹<%= listing.price.toLocaleString("en-IN") %> /night <br />
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

