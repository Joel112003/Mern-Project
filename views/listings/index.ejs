<% layout("/layouts/boilerplate") %>
<div class="filters">
  <div class="filter" data-category="Mansion">
    <div><i class="fa-solid fa-home-lg-alt"></i></div>
    <p>Mansion</p>
  </div>
  <div class="filter" data-category="Farm">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farm</p>
  </div>
  <div class="filter" data-category="Lake">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Lake</p>
  </div>
  <div class="filter" data-category="Beach">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Beach</p>
  </div>
  <div class="filter" data-category="Apartment">
    <div><i class="fa-solid fa-building"></i></div>
    <p>Apartment</p>
  </div>
  <div class="filter" data-category="Ski Resort">
    <div><i class="fa-solid fa-skiing"></i></div>
    <p>Ski Resort</p>
  </div>
  <div class="filter" data-category="Camping">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter" data-category="Cottage">
    <div><i class="fa-solid fa-house"></i></i></div>
    <p>Cottage</p>
  </div>
  <div class="filter" data-category="Luxury">
    <div><i class="fa-solid fa-crown"></i></div>
    <p>Luxury</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        ><b>Display total after Taxes</b></label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-links listing-item" data-category="<%= listing.category %>">
      <div class="card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem" />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            â‚¹<%= listing.price.toLocaleString("en-IN") %> /night
            <i class="tax-info"> &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

